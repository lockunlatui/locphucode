# LocDo Tech - Notification System Configuration
# Copy this file to .env.local and fill in your actual credentials

# 1. Email Notifications (Resend - Free 3000 emails/month)
# Sign up at: https://resend.com
RESEND_API_KEY=re_your_resend_api_key_here
NEXT_PUBLIC_RESEND_API_KEY=re_your_resend_api_key_here

# 2. Discord Webhook (Free & Real-time)
# Create webhook: Discord Server Settings > Integrations > Webhooks > New Webhook
NEXT_PUBLIC_DISCORD_WEBHOOK=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN

# 3. Telegram Bot (Free & Mobile Push)
# Create bot: Message @BotFather on Telegram, send /newbot
# Get chat ID: Add bot to group/channel, send message, check https://api.telegram.org/botYOUR_BOT_TOKEN/getUpdates
NEXT_PUBLIC_TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
NEXT_PUBLIC_TELEGRAM_CHAT_ID=-1001234567890

# 4. Custom Webhook (Your Backend/CRM)
NEXT_PUBLIC_WEBHOOK_URL=https://your-backend.com/api/leads
NEXT_PUBLIC_WEBHOOK_SECRET=your_webhook_secret_for_signature_verification

# 5. Slack Webhook (Optional)
# Create Slack app: https://api.slack.com/apps > Create New App > Incoming Webhooks
NEXT_PUBLIC_SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# 6. SMS/Twilio (Optional - for Hot Leads)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Analytics & Tracking
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_FACEBOOK_PIXEL_ID=123456789012345

# Database (if using external database for leads)
DATABASE_URL=postgresql://username:password@localhost:5432/locdo_leads

# Other Configuration
NEXT_PUBLIC_SITE_URL=https://locdo.tech
NODE_ENV=development
